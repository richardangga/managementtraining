<odoo>
	<data>
		<record id="view_management_ruang_tree" model="ir.ui.view">
			<field name="name">management.ruang.tree</field>
			<field name="model">management.ruang</field>
			<field name="type">tree</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<tree string="ruang">
					<field name="id_lokasi"/>
					<field name="no_ruang"/>
					<field name="name"/>
				</tree>
			</field>
		</record>
		<record id="view_management_ruang_form" model="ir.ui.view">
			<field name="name">management.ruang.form</field>
			<field name="model">management.ruang</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="ruang Form">
					<sheet>
                        <div class="oe_title">
                            <label for="id_lokasi" class="oe_edit_only" string="Ruang"/>
                            <h1>
                                <field name="id_lokasi"/>
                            </h1>
                        </div>
                        <group>
                            <field name="no_ruang"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
	</data>
</odoo>